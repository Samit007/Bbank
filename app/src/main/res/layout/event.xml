<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/backgroundwhite"
    android:orientation="vertical"
    android:layout_margin="50dp">


    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tvEname"
        style="@style/textStyle2"
        android:layout_marginBottom="10dp"
        android:hint="Event Name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#CF8086" />

    <TextView
        android:id="@+id/tvEaddress"
        style="@style/textStyle2"
        android:layout_marginBottom="10dp"
        android:hint="Event address" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#CF8086" />

    <TextView
        android:id="@+id/tvEstarttime"
        style="@style/textStyle2"
        android:layout_marginBottom="10dp"
        android:hint="Event Satrt time" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#CF8086" />

    <TextView
        android:id="@+id/tvEendtime"
        style="@style/textStyle2"
        android:layout_marginBottom="10dp"
        android:hint="Event End time" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#CF8086" />

    <TextView
        android:id="@+id/tvEdate"
        style="@style/textStyle2"
        android:layout_marginBottom="10dp"
        android:hint="Event Start Date" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#CF8086" />
</LinearLayout>
