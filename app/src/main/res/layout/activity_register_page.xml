<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#EDFF0000"
    android:orientation="vertical"
    tools:context="Fragments.RegisterPage">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/blood_logo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btnImg"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_image_black_24dp" />

                <ImageView
                    android:id="@+id/btnPhoto"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/add" />
            </RelativeLayout>


            <EditText
                android:id="@+id/etFullname"
                style="@style/textStyle"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:hint="Enter Fullname"
                android:maxLines="1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="35dp"
                android:background="#f9d7db" />

            <EditText
                android:id="@+id/etUsername"
                style="@style/textStyle"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:hint="Enter Username"
                android:maxLines="1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="35dp"
                android:background="#f9d7db" />

            <EditText
                android:id="@+id/etPassword"
                style="@style/textStyle"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:maxLines="1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="35dp"
                android:background="#f9d7db" />

            <EditText
                android:id="@+id/etPassword2"
                style="@style/textStyle"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:drawablePadding="8dp"
                android:hint="Re-Enter Password"
                android:inputType="textPassword"
                android:maxLines="1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="35dp"
                android:background="#f9d7db" />

            <EditText
                android:id="@+id/etEmail"
                style="@style/textStyle"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:hint="Enter Email"
                android:maxLines="2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="35dp"
                android:background="#f9d7db" />

            <EditText
                android:id="@+id/etPhoneNo"
                style="@style/textStyle"
                android:drawableLeft="@drawable/ic_contacts_black_24dp"
                android:hint="Enter Phone Number"
                android:inputType="number"
                android:maxLines="1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="35dp"
                android:background="#f9d7db" />

            <EditText
                android:id="@+id/etAddress"
                style="@style/textStyle"
                android:drawableLeft="@drawable/ic_home_black_24dp"
                android:hint="Enter Address"
                android:maxLines="1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="35dp"
                android:background="#f9d7db" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:text="Select Gender:"
                    android:textColor="#fff"
                    android:textSize="25sp" />

                <Spinner
                    android:id="@+id/etGender"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:entries="@array/gender"
                    android:spinnerMode="dropdown"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv1"
                    android:layout_marginTop="20dp"
                    android:text="Select Blood:"
                    android:drawableLeft="@drawable/ic_list_black_24dp"
                    android:textColor="#fff"
                    android:textSize="25sp" />

                <Spinner
                    android:id="@+id/etBloodgroup"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/etGender"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:entries="@array/blood_group"
                    android:spinnerMode="dropdown"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="25sp" />
            </RelativeLayout>

            <Button
                android:id="@+id/btnRegister"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_button"
                android:paddingRight="20dp"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="25sp"
                android:drawableLeft="@drawable/ic_touch_app_black_24dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>